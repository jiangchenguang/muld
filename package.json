{
  "name": "muld",
  "version": "0.0.1",
  "description": "mobile UI components built on react",
  "main": "lib/index.js",
  "scripts": {
    "dev": "ts-node tools/src/commands/dev.ts",
    "build": "yarn clean && yarn build:lib && yarn build:pages",
    "build:lib": "babel --extensions \".js,.ts,.tsx\" ./src/components --out-dir ./lib",
    "build:pages": "webpack --progress --config scripts/build-pages.js",
    "clean": "rm -rf ./lib ./dist",
    "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "test": "jest --no-cache",
    "test-update": "jest --no-cache --update-snapshot"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "yarn lint",
      "git add ."
    ]
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "styled-components": "^5.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-decorators": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@testing-library/jest-dom": "^5.11.1",
    "@testing-library/react": "^10.4.7",
    "@testing-library/react-hooks": "^3.3.0",
    "@types/classnames": "^2.2.10",
    "@types/fs-extra": "^9.0.1",
    "@types/jest": "^26.0.4",
    "@types/lodash": "^4.14.157",
    "@types/react": "^16.9.43",
    "@types/react-dom": "^16.9.8",
    "@types/styled-components": "^5.1.1",
    "@types/webpack-dev-server": "^3.11.0",
    "@types/webpackbar": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "address": "^1.1.2",
    "babel-jest": "^26.1.0",
    "babel-loader": "^8.1.0",
    "codemirror": "^5.55.0",
    "css-loader": "^3.6.0",
    "eslint": "^7.4.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-markdown": "^1.0.2",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.8",
    "fast-glob": "^3.2.4",
    "file-loader": "^6.0.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "fs-extra": "^9.0.1",
    "highlight.js": "^10.1.1",
    "html-webpack-plugin": "^4.3.0",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "less-loader": "^6.2.0",
    "lint-staged": "^10.2.11",
    "lodash": "^4.17.19",
    "mini-css-extract-plugin": "^0.9.0",
    "portfinder": "^1.0.26",
    "prettier": "^2.0.5",
    "raw-loader": "^4.0.1",
    "style-loader": "^1.2.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7",
    "url-loader": "^4.1.0",
    "webpack": "^5.0.0-beta.22",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.0.9",
    "webpackbar": "^4.0.0"
  }
}
